<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#BFB71C1C</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="Mainpage">
        <item name="android:background">#E6E57373</item>
    </style>


    <style name="mainButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded1</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">15dp</item>
    </style>
    <style name="listItems">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="listLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/rounded3</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="listImage">
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_width">100dp</item>
    </style>

    <style name="Main">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="upperText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/blackstroke</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">30sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="upperSelection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/blackstroke</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">25sp</item>
        <item name="android:padding">5dp</item>
    </style>

</resources>
